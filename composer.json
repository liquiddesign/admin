{
	"name": "liquiddesign/admin",
	"description": "Ⓐ Admin je routa a sada tříd pro možnost mít u každého modulu část pro administraci",
	"license": "MIT",
	"autoload": {
		"psr-4": {"Admin\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": { "Admin\\Tests\\": "tests/" }
	},
	"require":
	{
		"php":">=7.4",
		"nette/application":"^3.0",
		"nette/security":"^3.0",
		"nette/forms":"^3.0",
		"nette/utils":"^3.0",
		"nette/di":"^3.0",
		"nette/component-model":"^3.0",
		"liquiddesign/storm": "~1.0",
		"liquiddesign/forms": "@dev",
		"liquiddesign/security": "~1.0",
		"liquiddesign/messages": "@dev",
		"liquiddesign/translator": "@dev",
		"liquiddesign/pages": "@dev",
		"liquiddesign/grid": "~0.1",
		"liquiddesign/common": "@dev",
		"pragmarx/google2fa": "^8.0",
		"ext-pdo": "*",
		"ext-json": "*"
	},
	"require-dev":
	{
		"nette/tester":"^2.0",
		"tracy/tracy":"^2.0",
		"composer/composer": "^2.0",
		"liquiddesign/codestyle": "^1.0",
		"liquiddesign/migrator": "^1.0",
		"phpstan/phpstan-nette": "^1.0"
	},
	"scripts": {
		"fix-code": ["@phpcsfix"],
		"check-code": ["@phpcs", "@phpstan"],
		"phpstan": "phpstan analyse --memory-limit 1G -c phpstan.neon",
		"phpcs": "phpcs --standard=ruleset.xml --ignore=assets src",
		"phpcsfix": "phpcbf --standard=ruleset.xml --ignore=assets src",
		"tester": "tester tests/Cases/*.phpt  -c tests/php.ini --setup tests/setup.php",
		"aux-sync-database": "Migrator\\Scripts::syncDatabase",
		"sync-database": "@aux-sync-database Security\\Tests\\Bootstrap"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}

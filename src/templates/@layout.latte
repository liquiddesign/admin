<script type="text/javascript">
    disableFirstSectionUpButton();

    var sectionWrappers = $('.section-wrapper');

    if (!!sectionWrappers.length) {
        sectionWrappers.each(function () {
            var sectionTr = $(this).closest('tr');

            var originalTd = sectionTr.find('td');
            originalTd.slideUp(0);
            sectionTr.append('<td></td>');
        });
    }


    $('.section-toggler').on('click', function () {
        var sectionTr = $(this).closest('tr');
        var originalTd = sectionTr.find('td').first();
        var fakeTd = sectionTr.find('td').last();

        if (originalTd.is(':visible')) {
            originalTd.hide();
            fakeTd.show();
        } else {
            fakeTd.hide();
            originalTd.show();
        }
    });

    $('.section-delete').click(function (e) {
        e.preventDefault();
        var confirmed = confirm('Skutečně chcete smazat tuto sekci?');

        if (confirmed) {
            $(this).closest('tr').remove();
        }
    });

    $('.section-toggler').click(function (e) {
        e.preventDefault();
        $($(this).attr('href')).toggleClass('d-none');
    });

    $('.section-up, .section-down').click(function (e) {
        e.preventDefault();
        var sectionTr = $(this).parents('tr');
        var language = sectionTr.attr('data-lang');


        if ($(this).is('.section-up')) {
            var previousTr = $('tr[data-lang="' + language +'"]').eq($('tr[data-lang="' + language +'"]').index(sectionTr) - 1);
            if (!!previousTr.length) {
                sectionTr.insertBefore(previousTr);
            }
        } else {
            var nextTr = $('tr[data-lang="' + language +'"]').eq($('tr[data-lang="' + language +'"]').index(sectionTr) + 1);
            if (!!nextTr.length) {
                sectionTr.insertAfter(nextTr);
            }
        }

        disableFirstSectionUpButton();
    });

    $.fn.editableform.buttons  = '<button type="submit" class="btn btn-primary btn-sm editable-submit" style="margin-top: 3px;"><i class="fas fa-check"></i></button>' +
        '<button type="button" class="btn btn-secondary btn-sm editable-cancel" style="margin-top: 3px; margin-left: 2px; margin-right: 7px;"><i class="fas fa-times"></i></button>';


    $('.section-edit').click(function (e) {
        e.preventDefault();
        var sectionName = $(this).closest('.section-wrapper').find('.section-name');
        sectionName.editable({
            mode: 'inline',
            toggle: 'manual',
            onblur: 'ignore'
        }).editable('show');
    });

    $.each(allLanguages, function (i, val) {
        $('.section-wrapper[data-lang="'+ val +'"]').first().find('.section-toggler').trigger('click');
    });


    function disableFirstSectionUpButton() {
        $('form').find('tr:visible .section-up').removeClass('disabled');
        var sectionUpButton =$('form').find('tr:visible .section-up').first();
        sectionUpButton.addClass('disabled');
        $('form').find('tr:visible .section-down').removeClass('disabled');
        var sectionDownButton = $('form').find('tr:visible .section-down').last();
        sectionDownButton.addClass('disabled');
    }
</script>


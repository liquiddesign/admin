<script>
    // Load tiny templates
    $.ajax({
        url: {plink getTinyTemplates!},
        success: function (payload) {
            result = payload.result;

            result.forEach(function (value, i) {
                tinyTemplates.push(value);
            });
        },
    });

    Nette.validators.LqdAdminControlForm_validateUrl = function(elem, args, val) {
        $.nette.ajax({
            type: "GET",
            url: {plink validateUrl!},
            data: {
                value: val,
                template: args[1],
                lang: args[2],
                pk: args[3],
                urlPrefix: args[4],
            },
            async: false,
            success: function (payload) {
                result = payload.result;
            }
        });

        return result;
    };
</script>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>⋆ Admin - Přihlášení</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="{$basePath}/public/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{$basePath}/public/admin/css/adminlte.min.css">
    <link rel="shortcut icon" href="https://www.lqd.cz/public/favicon.ico?v=2" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <style>
        .login-page {
            background-image: url("{$pubUrl}/admin/img/grid-symetric.png");
            background-position: left top;
            background-repeat: repeat-x;
            background-size: 10rem;
            background-color: #fff;
        }

        .login-card-body {
            border-radius: .25rem;
        }
    </style>
</head>
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="{$basePath}/admin">
            <img height="60" src="{$pubUrl}/admin/img/lqd-logo-blue.png" alt="" style="margin-bottom: 20px;">
        </a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div n:if="$required2FA" class="card-body login-card-body">
            <p class="login-box-msg">Zadejte časově omezené jednorázové heslo:</p>
            <div n:foreach="$flashes as $flash" class="alert alert-danger">
                <span><i class="icon fas fa-exclamation"></i> {$flash->message}</span>
            </div>
            {form google2FAForm}
                <div class="input-group mb-3">
                    <input n:name="key" type="text" class="form-control" placeholder="Heslo">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <!-- /.col -->
                    <div class="col-12">
                        <button n:name="submit" type="submit" class="btn btn-primary btn-block">Přihlásit se</button>
                    </div>
                    <!-- /.col -->
                </div>
            {/form}
        </div>
        <div n:if="!$required2FA" class="card-body login-card-body">
            <p class="login-box-msg">Přihlaste se pro přístup do administrace</p>
            <div n:foreach="$flashes as $flash" class="alert alert-danger">
                <span><i class="icon fas fa-exclamation"></i> {$flash->message}</span>
            </div>
            {form loginForm}
                <div class="input-group mb-3">
                    <input n:name="login" type="text" class="form-control" placeholder="Login">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input n:name="password" type="password" class="form-control" placeholder="Heslo">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <!-- /.col -->
                    <div class="col-12">
                        <button n:name="submit" type="submit" class="btn btn-primary btn-block">Přihlásit se</button>
                    </div>
                    <!-- /.col -->
                </div>
            {/form}
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->

</body>
</html>

